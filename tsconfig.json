{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "rootDir": "./src",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowUnreachableCode": false,
        "noImplicitOverride": true
    }
}
